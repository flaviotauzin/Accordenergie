                var year = date.getFullYear();
                var month = date.getMonth() + 1; // Les mois vont de 0 à 11, donc on ajoute 1
                var day = date.getDate();
                var hour = date.getHours();
                var minute = date.getMinutes();

                // Construire la chaîne de date dans le format ISO 8601 (YYYY-MM-DDTHH:MM:SS)
                var isoDate = year + '-' + month.toString().padStart(2, '0') + '-' + day.toString().padStart(2, '0') + 'T' + hour.toString().padStart(2, '0') + ':' + minute.toString().padStart(2, '0') + ':00';

